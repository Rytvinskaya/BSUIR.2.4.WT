<article>
    <div class="article-head">
        <h2>
            <a href="{DBVALUE="link"}" > {DBVALUE="title"}</a>
        </h2>
        <div class="article-properties">
            <p>{CONFIG="article_short_published"}: {DBVALUE="date"}</p>
        </div>
    </div>                        
    <div class="article-body">
        <img src="{DBVALUE="img_ref"}" class="img-preview">
        <p>
            {DBVALUE="descr"}
        </p>
        <a href="{DBVALUE="link"}" class="a-button">{CONFIG="article_short_read_more"}</a>                
    </div>
</article>